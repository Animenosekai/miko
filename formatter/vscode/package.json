{
	"name": "zero-docs",
	"displayName": "Zero Docs",
	"publisher": "Animenosekai",
	"description": "A formatter for the Zero documentation style",
	"version": "1.0.0",
	"repository": {
		"url": "https://github.com/Animenosekai/zero"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": ["Formatters"],
	"activationEvents": [
		"onCommand:zero.format",
		"onCommand:zero.formatAll"
	],
	"icon": "miko_icon_rounded.png",
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "zero.format",
				"title": "ðŸ§ƒ Format current document using Zero"
			},
			{
				"command": "zero.formatAll",
				"title": "ðŸ§ƒ Format all visible documents using Zero"
			}
		],
		"configuration": {
			"title": "Zero Docs",
			"properties": {
				"zero-docs.noself": {
					"type": "boolean",
					"default": true,
					"description": "Ignoring the 'self' parameter from signatures. (useful for class methods)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	}
}