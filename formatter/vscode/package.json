{
	"name": "miko-docs",
	"displayName": "Miko Docs",
	"publisher": "Animenosekai",
	"description": "A formatter for the Miko documentation style",
	"version": "2.0.0",
	"repository": {
		"url": "https://github.com/Animenosekai/miko"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Formatters"
	],
	"icon": "miko_icon_rounded.png",
	"main": "./out/extension.js",
	"activationEvents": [
		"onLanguage:python",
		"onCommand:miko.format",
		"onCommand:miko.formatAll"
	],
	"contributes": {
		"commands": [
			{
				"command": "miko.format",
				"title": "ðŸ§ƒ Format current document using Miko"
			},
			{
				"command": "miko.formatAll",
				"title": "ðŸ§ƒ Format all visible documents using Miko"
			}
		],
		"configuration": {
			"title": "Miko Docs",
			"properties": {
				"miko-docs.noSelf": {
					"type": "boolean",
					"default": true,
					"description": "Ignoring the 'self' parameter from signatures. (useful for class methods)"
				},
				"miko-docs.flagPrefix": {
					"type": "string",
					"default": "!",
					"description": "The prefix for the docstring flags. (default: \"!\")"
				},
				"miko-docs.safeAnnotations": {
					"type": "boolean",
					"default": true,
					"description": "If the annotations should be loaded safely"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	}
}